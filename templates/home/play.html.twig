{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bonjour j'espère que tu es prêt à chercher </h1>
    <p> Voici la description de la plante à trouver </p>
    {% for plant in plants %}
    <tr>
        <br>
        <td>{{ plant.name}}</td>
        <br>
        <td>{{ plant.description }}</td>
        <br>
    </tr>
    <img class="image" src="{{ asset('assets/medias/pissenlit.jpg') }}"></img>
    {% endfor %}
    
    <video id="video" width="640" height="480" autoplay></video>
    <button id="snap">Take Photo</button>
    <canvas id="canvas" width="640" height="480"></canvas>
    {{ form_start(form) }}
    <button type="submit" class="btn btn-succes">Valider photo</button>
    {{ form_end(form) }}
</div>

<button onclick="window.location.href='/home';"> Home</button>
<script src="https://raw.githubusercontent.com/exif-js/exif-js/master/exif.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>



{% endblock %}

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('assets/js/pic.js') }}"></script>
        <script type="text/javascript" src="{{ asset('assets/js/getloc.js') }}"></script>
    {% endblock %}